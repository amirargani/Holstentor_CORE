@{
    ViewData["Title"] = "Bitte überprüfen Sie Ihre E-Mail | Restaurant am Holstentor Lübeck";
    Holstentor.Models.HomeRepository.HomeRep ivm = new Holstentor.Models.HomeRepository.HomeRep();
    var qivm = ivm.GetIndexHeaderSelect();
}

<!-- Header -->
@await Html.PartialAsync("P_HeaderBG")
<!-- Main Content -->
<main class="main">
    <!-- Section -->
    <section class="py-0">
        <div class="bg-web">
            <!-- Section -->
            <section class="py-0 pb-3">
                <div class="jumbotron jumbotron-fluid bg-rosa py-7">
                    <div class="container">
                        <h1 class="text-web mt-5" data-aos="fade-down" data-aos-duration="1000">@qivm.NameSite</h1>
                        <h5 class="text-black mb-2" data-aos="fade-down" data-aos-duration="1100"><i class="zmdi zmdi-email zmdi-hc-fw mr-1"></i>@qivm.Street @qivm.Number / @qivm.PostCode @qivm.City</h5>
                        <hr />
                        <h1 class="text-web fs-1 fs-lg-2 text-center" data-aos="fade-down" data-aos-duration="1200">Bitte überprüfen Sie Ihre E-Mail, um Ihr Passwort zurückzusetzen.</h1>
                        <div class="text-center">
                            <a href="/" class="btn btn-primary mx-2 px-3 mt-5" data-aos="fade-up" data-aos-delay="100" data-aos-duration="1300"><i class="fas fa-th-list mr-2"></i>Speisekarte</a>
                            @{
                                if (!User.Identity.IsAuthenticated)
                                {
                                    <a asp-controller="Account" asp-action="Login" class="btn btn-light px-5 mx-2 mt-5" data-aos="fade-down" data-aos-delay="100" data-aos-duration="1400"><i class="fas fa-sign-in-alt mr-2"></i>Login</a>
                                }
                            }
                        </div>
                        <hr />
                    </div>
                </div>
                <h5 class="text-white mb-2 text-center" data-aos="fade-up" data-aos-duration="1500"><b>@qivm.NameSite</b></h5>
            </section>
            <!-- End of Section -->
        </div>
    </section>
    <!-- End of Section -->
</main>
<!-- End of Main Content -->
@await Html.PartialAsync("P_Footer")

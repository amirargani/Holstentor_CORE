@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Einloggen | Restaurant am Holstentor Lübeck";
    ViewData["ReturnUrl"] = "/Profile/Index";
    Holstentor.Models.HomeRepository.HomeRep ivm = new Holstentor.Models.HomeRepository.HomeRep();
    var qivm = ivm.GetIndexHeaderSelect();
}

@await Html.PartialAsync("P_HeaderBG")
<!-- Main Content -->
<main class="main">
    <!-- Section -->
    <section class="py-0">
        <div class="bg-web">
            <!-- Section -->
            <section class="py-0 pb-3">
                <div class="jumbotron jumbotron-fluid bg-rosa py-7">
                    <div class="container">
                        <h1 class="text-web fs-3 fs-lg-5 mt-5" data-aos="fade-down" data-aos-duration="1000">Bitte loggen Sie sich ein</h1>
                        <h5 class="text-black mb-2" data-aos="fade-down" data-aos-duration="1100">@qivm.NameSite</h5>
                        <hr />
                        <form class="col px-5 px-lg-8 py-6 py-lg-0" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                            <div class="form-group mb-4" data-aos="zoom-in" data-aos-duration="1200">
                                <input type="email" class="form-control form-control-lg" placeholder="E-Mail-Addresse" asp-for="Email" name="Email">
                                <span asp-validation-for="Email" class="bg-primary text-white" aria-hidden="true"></span>
                            </div>
                            <div class="form-group mb-4" data-aos="fade-left" data-aos-duration="1300">
                                <input type="password" class="form-control form-control-lg" placeholder="Passwort" asp-for="Password" name="Password">
                                <span asp-validation-for="Password" class="bg-primary text-white"></span>
                            </div>
                            <div class="form-group mb-4 fs--1" data-aos="fade-right" data-aos-duration="1400">
                                <div class="d-flex justify-content-between">
                                    <div class="form-group form-check d-flex">
                                        <input type="checkbox" class="form-check-input" asp-for="RememberMe" name="RememberMe">
                                        <label class="form-check-label ttext-secondary font-weight-bold" asp-for="RememberMe">Angemeldet bleiben</label>
                                    </div>
                                    <a asp-controller="Account" asp-action="ForgotPassword" class="text-right text-danger font-weight-bold">Passwort vergessen?</a>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-lg btn-primary btn-block mb-4 text-capitalize" data-aos="fade" data-aos-duration="1500">Einloggen<i class="fas fa-sign-in-alt ml-2"></i></button>
                            <p class="text-black text-center">Haben Sie keinen Account? <a href="/Account/Register" class="text-success">Anmelden</a></p>
                        </form>
                        <hr />
                    </div>
                </div>
                <h5 class="text-white mb-2 text-center" data-aos="fade-up" data-aos-duration="1600"><b>@qivm.NameSite</b></h5>
            </section>
            <!-- End of Section -->
        </div>
    </section>
    <!-- End of Section -->
</main>
<!-- End of Main Content -->
@await Html.PartialAsync("P_Footer")
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
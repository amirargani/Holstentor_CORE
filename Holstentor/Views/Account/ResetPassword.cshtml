@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Passwort zurücksetzen | Restaurant am Holstentor Lübeck";
    Holstentor.Models.HomeRepository.HomeRep ivm = new Holstentor.Models.HomeRepository.HomeRep();
    var qivm = ivm.GetIndexHeaderSelect();
}

@await Html.PartialAsync("P_HeaderBG")
<!-- Main Content -->
<main class="main">
    <!-- Section -->
    <section class="py-0">
        <div class="bg-web">
            <!-- Section -->
            <section class="py-0 pb-3">
                <div class="jumbotron jumbotron-fluid bg-rosa py-7">
                    <div class="container">
                        <h1 class="text-web fs-3 fs-lg-5 mt-5" data-aos="fade-down" data-aos-duration="1000">Passwort zurücksetzen.</h1>
                        <h5 class="text-black mb-2" data-aos="fade-down" data-aos-duration="1100">@qivm.NameSite</h5>
                        <hr />
                        <form class="col px-5 px-lg-8 py-6 py-lg-0" asp-controller="Account" asp-action="ResetPassword" method="post">
                            <input asp-for="Code" type="hidden" />
                            <div class="form-group mb-4" data-aos="zoom-in" data-aos-duration="1200">
                                <input type="email" class="form-control form-control-lg" placeholder="E-Mail-Addresse" asp-for="Email" name="Email">
                                <span asp-validation-for="Email" class="bg-primary text-white" aria-hidden="true"></span>
                            </div>
                            <div class="form-group mb-4" data-aos="zoom-in" data-aos-duration="1300">
                                <input type="password" class="form-control form-control-lg" placeholder="Passwort" asp-for="Password" name="Password">
                                <span asp-validation-for="Password" class="bg-primary text-white" aria-hidden="true"></span>
                            </div>
                            <div class="form-group mb-4" data-aos="zoom-in" data-aos-duration="1400">
                                <input type="password" class="form-control form-control-lg" placeholder="Bestätigen Sie das Passwort" asp-for="ConfirmPassword" name="ConfirmPassword">
                                <span asp-validation-for="ConfirmPassword" class="bg-primary text-white" aria-hidden="true"></span>
                            </div>
                            <button type="submit" class="btn btn-lg btn-info btn-block mb-4 text-capitalize" data-aos="fade" data-aos-duration="1500">Zurücksetzen<i class="fas fa-exchange-alt ml-2"></i></button>
                        </form>
                        <hr />
                    </div>
                </div>
                <h5 class="text-white mb-2 text-center" data-aos="fade-up" data-aos-duration="1600"><b>@qivm.NameSite</b></h5>
            </section>
            <!-- End of Section -->
        </div>
    </section>
    <!-- End of Section -->
</main>
<!-- End of Main Content -->
@await Html.PartialAsync("P_Footer")
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
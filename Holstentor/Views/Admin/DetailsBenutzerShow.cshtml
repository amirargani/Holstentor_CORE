@model IEnumerable<Holstentor.Models.ApplicationUser>
@{
    ViewData["Title"] = "Meine Verwaltung";
    //Layout = "~/Views/Shared/_MainLayout.cshtml";
    Holstentor.Models.HomeRepository.HomeRep ivm = new Holstentor.Models.HomeRepository.HomeRep();
    var qivm = ivm.GetIndexHeaderSelect();
}

@await Html.PartialAsync("P_HeaderBG")
<!-- Main Content -->
<main class="main">
    <!-- Section -->
    <section class="py-0">
        <div class="bg-web">
            <!-- Section -->
            <section class="py-0 pb-3">
                <div class="jumbotron jumbotron-fluid bg-rosa py-7">
                    <div class="container">
                        <h1 class="text-web fs-3 fs-lg-5 mt-5" data-aos="fade-down" data-aos-duration="1000">Meine Verwaltung</h1>
                        @foreach (var item in Model.OrderByDescending(a => a.Date))
                        {
                            if (item.Name != null)
                            {
                                <h5 class="text-black mb-2" data-aos="fade-down" data-aos-duration="1100">Name: (@item.Name @item.NameFamily)</h5>
                            }
                            if (item.Name == null)
                            {
                                <h5 class="text-black mb-2" data-aos="fade-down" data-aos-duration="1100">E-Mail-Adresse: (@item.Email)</h5>
                            }
                        }
                        <div class="tab-content py-3 px-3 px-sm-0">
                            <div class="tab-pane fade show active">
                                <!-- Pagination -->
                                <div class="col-12">
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination">
                                            <li><a class="btn btn-secondary mr-3" href="/Admin/DetailsBenutzer"><i class="fas fa-chevron-circle-left mr-2"></i>Zurück</a></li>
                                        </ul>
                                    </nav>
                                </div>
                                <!-- End of Pagination -->
                                <div class="container">
                                    <div class="table-responsive mb-2 mt-3">

                                        <table class="table table-hover table-striped table-bordered text-center">
                                            <thead>
                                                <tr>
                                                   <th>#</th>
                                                   <th>Vorname</th>
                                                   <th>Familienname</th>
                                                   <th>E-Mail</th>
                                                   <th>Telefonnummer</th>
                                                </tr>
                                            </thead>
                                            <tfoot>
                                                <tr>
                                                   <th>#</th>
                                                   <th>Vorname</th>
                                                   <th>Familienname</th>
                                                   <th>E-Mail</th>
                                                   <th>Telefonnummer</th>
                                                </tr>
                                            </tfoot>
                                            <tbody>
                                                @{
                                                    int i = 1;
                                                    if (Model.Count() > 0)
                                                    {
                                                        @foreach (var item in Model.OrderByDescending(a => a.Date))
                                                        {
                                                            string bg = "";
                                                            if (item.EmailConfirmed == false)
                                                            {
                                                                bg = "background-color: #ffeaed;";
                                                            }
                                                            <tr style="@bg">
                                                                <th>@i</th>
                                                                <th>@item.Name</th>
                                                                <th>@item.NameFamily</th>
                                                                <th>@item.Email</th>
                                                                <th>@item.PhoneNumber</th>
                                                            </tr>
                                                            i = i + 1;
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td class="bg-danger text-white" colspan="5">-</td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h5 class="text-white mb-2 text-center" data-aos="fade-up" data-aos-duration="1200"><b>@qivm.NameSite</b></h5>
            </section>
            <!-- End of Section -->
        </div>
    </section>
    <!-- End of Section -->
</main>
<!-- End of Main Content -->
@await Html.PartialAsync("P_Footer")
@model Album_Db
@{
    ViewData["Title"] = "Meine Verwaltung";
    //Layout = "~/Views/Shared/_MainLayout.cshtml";
    Holstentor.Models.HomeRepository.HomeRep ivm = new Holstentor.Models.HomeRepository.HomeRep();
    var qivm = ivm.GetIndexHeaderSelect();
}

@await Html.PartialAsync("P_HeaderBG")
<!-- Main Content -->
<main class="main">
    <!-- Section -->
    <section class="py-0">
        <div class="bg-web">
            <!-- Section -->
            <section class="py-0 pb-3">
                <div class="jumbotron jumbotron-fluid bg-rosa py-7">
                    <div class="container">
                        <h1 class="text-web fs-3 fs-lg-5 mt-5" data-aos="fade-down" data-aos-duration="1000">Meine Verwaltung</h1>
                        <h5 class="text-black mb-2" data-aos="fade-down" data-aos-duration="1100">Bearbeiten Sie die Informationen</h5>
                        <div class="tab-content py-3 px-3 px-sm-0">
                            <div class="tab-pane fade show active">
                                <!-- Pagination -->
                                <div class="col-12">
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination">
                                            <li><a class="btn btn-secondary mr-3" href="/Admin/Galerie"><i class="fas fa-chevron-circle-left mr-2"></i>Zurück</a></li>
                                        </ul>
                                    </nav>
                                </div>
                                <!-- End of Pagination -->
                                <div class="container">
                                    <form class="col px-5 px-lg-8 py-6 py-lg-0 mt-3" asp-controller="Admin" asp-action="GalerieBearbeitenConfirmed" enctype="multipart/form-data" method="post">
                                        <input type="hidden" asp-for="@Model.ID" name="id" value="@Model.ID" />
                                        <div class="form-group mb-4">
                                            <input type="text" class="form-control form-control-lg" placeholder="Fotoname" asp-for="NamePic" name="NamePic">
                                            <span asp-validation-for="NamePic" class="bg-primary text-white" aria-hidden="true"></span>
                                        </div>
                                        <div class="custom-file form-group mb-4">
                                            <input type="file" class="custom-file-input" name="Image">
                                            <label class="custom-file-label">Datei wählen...</label>
                                        </div>
                                        <div class="form-group mb-4">
                                            <img src="../assets/img/backgrounds/album/@Model.Image" class="d-none d-lg-block" width="500" height="300" alt="@Model.NamePic" style="box-shadow: 0 10px 16px 0 rgba(0,0,0,0.2),0 3px 5px 0 rgba(0,0,0,0.19) !important; border: 2px solid rgb(255, 255, 255);" />
                                            <img src="../assets/img/backgrounds/album/@Model.Image" class="d-block d-lg-none" width="150" height="100" alt="@Model.NamePic" style="box-shadow: 0 10px 16px 0 rgba(0,0,0,0.2),0 3px 5px 0 rgba(0,0,0,0.19) !important; border: 2px solid rgb(255, 255, 255);" />
                                        </div>
                                        <button type="submit" class="btn btn-lg btn-success btn-block mb-4 text-capitalize">Bearbeiten<i class="fas fa-edit ml-2"></i></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h5 class="text-white mb-2 text-center" data-aos="fade-up" data-aos-duration="1200"><b>@qivm.NameSite</b></h5>
            </section>
            <!-- End of Section -->
        </div>
    </section>
    <!-- End of Section -->
</main>
<!-- End of Main Content -->
@await Html.PartialAsync("P_Footer")
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
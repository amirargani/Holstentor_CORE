                                                    <th><i class="fas fa-edit text-warning"></i></th>
                                                </tr>
                                            </thead>
                                            <tfoot>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Kategoriename</th>
                                                    <th><span class="text-success">Aktiv</span>/<span class="text-danger">Inaktiv</span></th>
                                                    @*<th><i class="fas fa-check text-success"></i>/<i class="fas fa-times text-danger"></i></th>*@
                                                    <th><i class="fas fa-edit text-warning"></i></th>
                                                </tr>
                                            </tfoot>
                                            <tbody>
                                                @{
                                                    int icategory = 1;
                                                    if (qcategory.Count() > 0)
                                                    {
                                                        @foreach (var item in qcategory.OrderBy(a => a.TitleCategory).Take(10))
                                                        {
                                                            string bg = "";
                                                            if (item.ActivePassive == false)
                                                            {
                                                                bg = "background-color: #ffeaed;";
                                                            }
                                                            <tr style="@bg">
                                                                <th>@icategory</th>
                                                                <th>@item.TitleCategory</th>
                                                                @*<th> @item.ActivePassive</th>*@
                                                                <th>
                                                                    @{
                                                                        if (item.ActivePassive == false)
                                                                        {
                                                                            <a asp-action="KategorieAktiv" asp-route-id="@item.ID" class="btn btn-success" style="width: 50px;"><i class="fas fa-check"></i></a>
                                                                        }
                                                                        else
                                                                        {
                                                                            <a asp-action="KategorieInaktiv" asp-route-id="@item.ID" class="btn btn-danger" style="width: 50px;"><i class="fas fa-times"></i></a>
                                                                        }
                                                                    }
                                                                </th>

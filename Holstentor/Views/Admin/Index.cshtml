                                                    <th><i class="fas fa-edit text-warning"></i></th>
                                                </tr>
                                            </thead>
                                            <tfoot>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Adresse</th>
                                                    <th>Beschreibung</th>
                                                    @*<th>E-Mail</th>*@
                                                    @*<th>EmbedLinkGoogleMap</th>*@
                                                    <th>Websitename</th>
                                                    <th>Telefonnummer</th>
                                                    <th><i class="fas fa-edit text-warning"></i></th>
                                                </tr>
                                            </tfoot>
                                            <tbody>
                                                <tr>
                                                    <th>@qivm.IDIndex</th>
                                                    <th>@qivm.Street @qivm.Number<br />@qivm.PostCode @qivm.City<br />@qivm.Country</th>
                                                    <th>@qivm.Description</th>

                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- Pagination -->
                                    <div class="col-12">
                                        <nav aria-label="Page navigation example">
                                            <ul class="pagination">
                                                <li>
                                                    <form class="" asp-controller="Admin" asp-action="KopfzeileFusszeileUeber" method="post">
                                                        <input type="hidden" name="id" value="1" />
                                                        <button type="submit" class="btn btn-dark mb-2 fs--1"><i class="fas fa-edit mr-2"></i>Kopfzeile/Fußzeile/Über</button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </nav>
                                    </div>
                                    <!-- End of Pagination -->
                                    <div class="table-responsive mb-2 mt-3">
                                        <table class="table table-hover table-striped table-bordered text-center">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Adresse</th>
                                                    <th>Beschreibung</th>

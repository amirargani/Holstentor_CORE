                                    <div class="col-12">
                                        <nav aria-label="Page navigation example">
                                            <ul class="pagination">
                                                <li><a class="btn btn-dark" href="/Admin/Kategorie"><i class="fas fa-th-list mr-2"></i>Kategorie</a></li>
                                            </ul>
                                        </nav>
                                    </div>
                                    <!-- End of Pagination -->
                                    <div class="table-responsive mb-2">
                                        <table class="table table-hover table-striped table-bordered text-center">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Kategoriename</th>

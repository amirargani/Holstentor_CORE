@model IEnumerable<VmCategoryProductViewModel>
@{
    ViewData["Title"] = "Kategoriesuche | Restaurant am Holstentor Lübeck";
    Holstentor.Models.HomeRepository.HomeRep ivm = new Holstentor.Models.HomeRepository.HomeRep();
    var qivm = ivm.GetIndexHeaderSelect();
    int i = 0;
}

<!-- Header -->
@await Html.PartialAsync("P_HeaderBG")
<!-- End of Header -->
<!-- Main Content -->
<main class="main">
    <!-- Section -->
    <section class="py-0">
        <div class="bg-web">
            <!-- Section -->
            <section class="py-0 pb-3">
                <div class="jumbotron jumbotron-fluid bg-rosa py-7">
                    <div class="container">
                        @{
                            if (Model.Count() <= 0)
                            {
                                <h1 class="text-web mt-5" data-aos="fade-down" data-aos-duration="1000">@qivm.NameSite</h1>
                                <h5 class="text-black mb-2" data-aos="fade-down" data-aos-duration="1100"><i class="zmdi zmdi-map zmdi-hc-fw mr-1"></i>@qivm.Street @qivm.Number / @qivm.PostCode @qivm.City</h5>
                            }
                            foreach (var item in Model)
                            {
                                if (i < 1)
                                {
                                    if (item.TitleCategory != null)
                                    {
                                        <h1 class="text-web fs-3 fs-lg-5 mt-5" data-aos="fade-down" data-aos-duration="1000">@item.TitleCategory</h1>
                                    }
                                    if (item.DescriptionCategory != null)
                                    {
                                        <h5 class="text-black mb-2" data-aos="fade-down" data-aos-duration="1100">@item.DescriptionCategory</h5>
                                    }
                                    i++;
                                }
                            }
                        }
                        <hr />
                        @{
                            if (Model.Count() <= 0)
                            {
                                <h1 class="text-web fs-3 fs-lg-5 text-center" data-aos="fade-down" data-aos-duration="1200">Nichts gefunden.</h1>
                            }
                        }
                        <div class="row">
                            @{
                                if (Model.Count() > 0)
                                {
                                    foreach (var item in Model.OrderBy(a => a.TitleSubCategory))
                                    {
                                        <div class="col-lg-4 col-md-6 mb-2 mt-2">
                                            <!--&nbsp;-->
                                            <div class="card-deck">
                                                <div class="card">
                                                    @if (item.NamePicGallery != null)
                                                    {
                                                        <img class="card-img-top" src="@item.ImageGallery" alt="@item.NamePicGallery" style="height: 250px;">
                                                    }
                                                    <div class="card-header"><b>@item.TitleProduct</b></div>
                                                    <div class="card-body">
                                                        <div class="table-responsive mb-2">
                                                            <table class="table table-light text-center">
                                                                <thead>
                                                                    <tr class="bg-web text-white">
                                                                        @if (item.SubtitleSubCategory1 != null)
                                                                        {
                                                                            <th>@item.SubtitleSubCategory1</th>
                                                                        }
                                                                        @if (item.SubtitleSubCategory2 != null)
                                                                        {
                                                                            <th>@item.SubtitleSubCategory2</th>
                                                                        }
                                                                        @if (item.SubtitleSubCategory3 != null)
                                                                        {
                                                                            <th>@item.SubtitleSubCategory3</th>
                                                                        }
                                                                    </tr>
                                                                </thead>
                                                                <tfoot>
                                                                    <tr>
                                                                        @if (item.SubtitleSubCategory1 != null)
                                                                        {
                                                                            <th>@item.SubtitleSubCategory1</th>
                                                                        }
                                                                        @if (item.SubtitleSubCategory2 != null)
                                                                        {
                                                                            <th>@item.SubtitleSubCategory2</th>
                                                                        }
                                                                        @if (item.SubtitleSubCategory3 != null)
                                                                        {
                                                                            <th>@item.SubtitleSubCategory3</th>
                                                                        }
                                                                    </tr>
                                                                </tfoot>
                                                                <tbody>
                                                                    <tr>
                                                                        <th>@item.PriceProduct1</th>
                                                                        @if (item.PriceProduct2 != null)
                                                                        {
                                                                            <th>@item.PriceProduct2</th>
                                                                        }
                                                                        @if (item.PriceProduct3 != null)
                                                                        {
                                                                            <th>@item.PriceProduct3</th>
                                                                        }
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                        @if (item.DescriptionProduct != null)
                                                        {
                                                            <hr />
                                                            <h5 class="card-title text-web fs--1 text-justify">@item.DescriptionProduct</h5>
                                                        }
                                                        <p class="card-text"></p>
                                                    </div>
                                                    @*<div class="card-footer">
                                                        <small class="text-muted">@item.DateProduct</small>
                                                    </div>*@
                                                    <div class="card-footer"><small>@item.TitleCategory:&nbsp;<b>@item.TitleSubCategory</b></small></div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            }
                        </div>
                        <hr />
                    </div>
                </div>
                <h5 class="text-white mb-2 text-center" data-aos="fade-up" data-aos-duration="1300"><b>@qivm.NameSite</b></h5>
            </section>
            <!-- End of Section -->
        </div>
    </section>
    <!-- End of Section -->
</main>
<!-- End of Main Content -->
@await Html.PartialAsync("P_Footer")
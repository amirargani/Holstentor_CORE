                                            <li class="dropdown-menu-item"><a asp-controller="Profile" asp-action="Message" class="dropdown-menu-link"><i class="fas fa-comment mr-2 fs-1"></i>Nachricht senden</a></li>
                                            <li class="dropdown-menu-item"><a asp-controller="Profile" asp-action="MessageReply" class="dropdown-menu-link"><i class="fas fa-comments mr-2 fs-1"></i>Nachricht empfangen</a></li>
                                            <li class="dropdown-menu-item"><a asp-controller="Profile" asp-action="ChangePassword" class="dropdown-menu-link"><i class="fas fa-key mr-2 fs-1"></i>Passwort</a></li>
                                        </ul>
                                    </li>
                                    <li class="spyre-nav-item"><a asp-action="Logout" asp-controller="Account" class="spyre-nav-link"><i class="fas fa-power-off mr-2 fs-2"></i>Ausloggen</a></li>
                                }
                                else
                                {
                                    <li class="spyre-nav-item"><a asp-action="Login" asp-controller="Account" class="spyre-nav-link"><i class="fas fa-sign-in-alt mr-2 fs-2"></i>Einloggen</a></li>
                                }
                            }*@
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-7 col-xl-8 d-none d-md-block">
                    <div class="d-flex flex-column h-100">
                        <div class="d-flex h-100">
                            <div class="align-self-center">
                                <div class="text-uppercase"

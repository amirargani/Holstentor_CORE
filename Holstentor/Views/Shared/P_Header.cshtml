@{
    Holstentor.Models.HomeRepository.HomeRep ivm = new Holstentor.Models.HomeRepository.HomeRep();
    var qivm = ivm.GetIndexHeaderSelect();
    var qupload = ivm.GetHochladen();
    var username = User.Identity.Name;
    var qcategory = ivm.GetCategoryLink().ToList();
    var qsubcategory = ivm.GetSubCategoryLink().ToList();
}

<!-- Header --> @*data-transparent data-text-color="#ffffff"*@
<header class="spyre-navbar navbar navbar-expand-lg fixed-top align-items-center" data-transparent data-text-color="#ffffff">
